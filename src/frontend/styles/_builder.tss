@tailwind base;
@tailwind components;
@tailwind utilities;

@layer components {

  html {
    @apply bg-warmGray-900 text-warmGray-500
  }

  .devtools-btn {
    @apply bg-slate-600 hover:bg-slate-500 px-3 py-0.5 rounded-md
  }

  .devtools-btn.active {
    @apply bg-orange-600 hover:bg-orange-500 
  }

  .devtools-corner-btn {
    @apply bg-gray-800 hover:bg-gray-600 w-10 aspect-4/3 border-2 border-gray-700
  }

}